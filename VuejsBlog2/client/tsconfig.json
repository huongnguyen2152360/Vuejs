{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
    "removeComments": true,
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "sourceMap": true,
    // "noImplicitAny": true,
    // "noImplicitThis": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
